# Environment Variables Template
# Copy this file to .env and fill in your values

# Bot Configuration (Required)
MicrosoftAppId=your-bot-app-id-here
MicrosoftAppPassword=your-bot-app-password-here
TENANT_ID=your-tenant-id-here

# Azure Infrastructure Configuration (Required)
AZURE_WEBAPP_NAME=your-webapp-name

# Azure Infrastructure Configuration (Optional - will use defaults if not set)
RESOURCE_GROUP=rg-teams-bot
LOCATION=eastus
SKU=B1
PYTHON_VERSION=3.11

# Flask Configuration (Optional)
FLASK_ENV=development
PORT=5000

# Microsoft Graph API (Optional - for manifest upload)
CLIENT_ID=your-client-id
CLIENT_SECRET=your-client-secret
BOT_APP_ID=your-bot-app-id-here

# Additional Configuration (Optional)
AZURE_WEBAPP_DOMAIN=your-webapp-name.azurewebsites.net
