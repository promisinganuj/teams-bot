# Example .env file for Teams Bot Deployment
# Copy this to .env and replace with your actual values

# Bot Configuration (Required) - Get these from Azure Bot Framework registration
MicrosoftAppId=12345678-1234-1234-1234-123456789012
MicrosoftAppPassword=your-super-secret-bot-password-here
TENANT_ID=87654321-4321-4321-4321-210987654321

# Azure Infrastructure Configuration (Required)
AZURE_WEBAPP_NAME=my-teams-productivity-bot

# Azure Infrastructure Configuration (Optional - will use defaults if not set)
RESOURCE_GROUP=rg-my-teams-bot
LOCATION=eastus
SKU=B1
PYTHON_VERSION=3.11

# Flask Configuration (Optional - used for local development)
FLASK_ENV=development
PORT=5000

# Microsoft Graph API (Optional - same as bot credentials, for manifest upload)
CLIENT_ID=12345678-1234-1234-1234-123456789012
CLIENT_SECRET=your-super-secret-bot-password-here
BOT_APP_ID=12345678-1234-1234-1234-123456789012

# Additional Configuration (Optional - auto-generated from AZURE_WEBAPP_NAME)
AZURE_WEBAPP_DOMAIN=my-teams-productivity-bot.azurewebsites.net
